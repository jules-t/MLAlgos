{
  "model": {
    "src_vocab_size": 10000,
    "tgt_vocab_size": 10000,
    "src_max_seq_len": 512,
    "tgt_max_seq_len": 512,
    "embed_dim": 128,
    "num_heads": 4,
    "dim_ffn": 512,
    "num_layers": 2,
    "input_dropout": 0.1
  },
  "training": {
    "batch_size": 8,
    "num_epochs": 20,
    "learning_rate": 0.0003,
    "warmup_steps": 1000,
    "max_lr": 0.0005,
    "weight_decay": 0.01,
    "gradient_clip": 1.0,
    "label_smoothing": 0.1,
    "save_every": 5,
    "checkpoint_dir": "./checkpoints",
    "val_split": 0.1,
    "val_every": 1,
    "log_dir": "./logs",
    "log_every": 100,
    "device": "mps"
  },
  "data": {
    "data_path": "./data",
    "dataset_type": "parallel",
    "src_file": "src.txt",
    "tgt_file": "tgt.txt",
    "vocab_file": "vocab.json",
    "tokenizer_type": "char",
    "min_freq": 1,
    "pad_token": "<PAD>",
    "bos_token": "<BOS>",
    "eos_token": "<EOS>",
    "unk_token": "<UNK>"
  }
}